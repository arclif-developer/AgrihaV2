<html>
  <head>
    <meta charset='utf-8' />
    <title>Order Confirmation</title>
  </head>
  <body>
    <h1>Order Confirmation</h1>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
          <tr>
            <td>{{lookup this 'productname'}}</td>
            <td>{{lookup this 'quantity'}}</td>
            <td>{{lookup this 'amount'}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>